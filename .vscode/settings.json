{
    "editor.formatOnSave": true,               // Automatically format on save
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "clangd.arguments": [
        "--clang-tidy",                         // Enable Clang-Tidy code checks
        "--completion-style=detailed",          // Detailed code completion
        "--header-insertion=never",             // Do not automatically insert #include
        "--cross-file-rename",                  // Support cross-file renaming
        "--suggest-missing-includes",           // Suggest missing #include
        "--compile-commands-dir=${workspaceFolder}"
    ],

    "cpp-check-lint.--enable": true,   // Enable the plugin
    "cpp-check-lint.cppcheck.--executable": "C:\\Program Files\\Cppcheck\\cppcheck.exe",  // Path to Cppcheck
    "cpp-check-lint.cppcheck.--inline-suppr": false,  // Disable inline suppression
    "cpp-check-lint.cppcheck.--language=": "c", // Use C language for checking
    "cpp-check-lint.cppcheck.--onsave": false, // Do not check the file immediately upon saving
    "cpp-check-lint.cppcheck.--quick_fix": false,
    "cpp-check-lint.cpplint.--enable": false, // Disable unnecessary cpplint
    // "cpp-check-lint.cppcheck.--addon=": [  // Temporarily do not enable plugins
    //     "misra.py"
    // ],
}
